<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        x:Name="Mailbox" mc:Ignorable="d" x:Class="JobBoard.WpfApplication.MailboxWindow" Title="View your mailbox" Height="671" Width="967" Background="#FF1D1D1D" 
        Visibility="Visible" WindowStyle="None" AllowsTransparency="True" WindowStartupLocation="CenterScreen" ResizeMode="CanResizeWithGrip" MinWidth="967" MinHeight="671" MouseLeftButtonDown="Mailbox_MouseLeftButtonDown" MouseDoubleClick="Mailbox_MouseDoubleClick">
    <Grid>

        <Button x:Name="WindowClose" Content="X" Style="{DynamicResource CloseButton}" VerticalAlignment="Top" Foreground="#FFD6D6D6" Height="21" BorderBrush="#FF575757" FontWeight="Bold" FontSize="13.333" FontFamily="/WpfApplication;component/Fonts/#Leelawadee" Click="WindowClose_Click" HorizontalAlignment="Right" Width="31" Margin="0,10,17,0"/>
        <Button x:Name="WindowMinimize" Margin="0,10,53,0" Style="{DynamicResource MinimizeButton}" Foreground="#FFD6D6D6" BorderBrush="#FF575757" FontWeight="Bold" FontSize="13.333" FontFamily="/WpfApplication;component/Fonts/#Leelawadee" Background="#FF1D1D1D" Click="WindowMinimize_Click" Height="21" VerticalAlignment="Top" HorizontalAlignment="Right" Width="31" RenderTransformOrigin="0.806,0.639"/>

        <Grid Margin="0,122,0,10" HorizontalAlignment="Left" Width="245">
            <Button x:Name="InboxBtn" Style="{DynamicResource SimpleButton}" VerticalAlignment="Top" Width="241" RenderTransformOrigin="-0.08,-1.002" BorderBrush="{x:Null}" Background="Gray" Foreground="#FF1D1D1D" FontSize="28" ClickMode="Press" IsDefault="True" Height="41" HorizontalAlignment="Left" FontFamily="Calibri bold" d:LayoutOverrides="VerticalAlignment" BorderThickness="1" Content="Inbox" Click="InboxBtn_Click"/>
            <Button x:Name="draftBtn" Style="{DynamicResource SimpleButton}" VerticalAlignment="Top" Width="241" RenderTransformOrigin="-0.08,-1.002" BorderBrush="{x:Null}" Background="Gray" Foreground="#FF1D1D1D" FontSize="28" ClickMode="Press" IsDefault="True" Height="41" HorizontalAlignment="Left" FontFamily="Calibri bold" BorderThickness="1" Margin="0,38,0,0" Content="Draft" Click="draftBtn_Click"/>
            <Button x:Name="sentBtn" Style="{DynamicResource SimpleButton}" VerticalAlignment="Top" Width="241" RenderTransformOrigin="-0.08,-1.002" BorderBrush="{x:Null}" Background="Gray" Foreground="#FF1D1D1D" FontSize="28" ClickMode="Press" IsDefault="True" Height="41" HorizontalAlignment="Left" FontFamily="Calibri bold" BorderThickness="1" Margin="0,76,0,0" Content="Sent" Click="sentBtn_Click"/>
        </Grid>
        <ScrollViewer x:Name="ContentScrollBox" Margin="250,116,0,83" MinHeight="405" MinWidth="631" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="mailView" VerticalAlignment="Top" Margin="0"/>
        </ScrollViewer>
        <Button x:Name="writemailBtn" Content="New Mail" Margin="0,70.977,53,0" Style="{DynamicResource SimpleButton}" VerticalAlignment="Top" Width="102.556" RenderTransformOrigin="-0.08,-1.002" BorderBrush="{x:Null}" Background="#FFA7D479" Foreground="#FF1D1D1D" ClickMode="Press" IsDefault="True" Height="29" HorizontalAlignment="Right" FontFamily="Calibri bold" FontSize="16" Click="writemailBtn_Click"/>
        <Label x:Name="mailboxTitle" Content="Mail Box" FontFamily="/WpfApplication;component/Fonts/#Segoe UI" Background="#00000000" Foreground="White" FontSize="32" VerticalAlignment="Top" HorizontalAlignment="Left" Height="51" Margin="45,37,0,0"/>

    </Grid>
</Window>
